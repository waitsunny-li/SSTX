@import '/styles/iconfont.wxss';

/**app.wxss**/
.indexscroll {
  width: 100vw;
  height: calc(100vh - 120rpx);
}

page {
  --themeColor: #e1211f;
  --assColor: #970d0d;
}

/* 头部 */
.top-header {
  width: 100vw;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.top-header .top-wrap {
  width: 70rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.top-header .top-wrap .logo {
  width: 100%;
  height: 70rpx;
}

.top-header .top-wrap .bo-logo {
  width: 100%;
  height: 30rpx;
}

.header-title-top {
  width: 100vw;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--assColor);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}

/* 提交按钮 */
.submit {
  margin-top: 50rpx;
  width: 100% !important;
  font-size: 28rpx !important;
  height: 70rpx !important;
  background-color: var(--themeColor) !important;
}