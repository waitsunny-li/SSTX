.indexscroll {
  width: 100vw;
  height: 100vh;
}
.video-wrap {
  width: 100vw;
  height: 400rpx;
}
.video-wrap .video-content {
  width: 100%;
  height: 100%;
}
.video-desc {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}
.video-desc .title {
  color: #000000;
  font-size: 32rpx;
  font-weight: 600;
}
.video-desc .detail {
  width: 100%;
  height: 60rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}
.video-desc .detail .play-number {
  width: 30%;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.video-desc .detail .dianzan {
  width: 30%;
  height: 100%;
  display: flex;
  align-items: center;
  color: #999999;
}
.video-desc .detail .dianzan .number {
  margin-left: 10rpx;
  font-size: 28rpx;
}
.video-desc .detail .share {
  width: 190rpx;
  height: 100%;
  display: flex;
  align-items: center;
  color: #999999;
}
.video-desc .detail .share .text {
  font-size: 28rpx;
}
.video-desc .detail .share .iconfont {
  margin-left: 10rpx;
}
.recommend {
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.recommend .recommend-title {
  width: 100%;
  color: #000000;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-weight: 600;
}
