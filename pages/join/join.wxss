.my-infomation {
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}
.my-infomation .infomation-form {
  width: 100%;
}
.my-infomation .infomation-form .info-textarea .title {
  color: #000000;
  font-size: 28rpx;
  padding: 15rpx 0;
}
.my-infomation .infomation-form .info-textarea textarea {
  width: 100%;
}
.my-infomation .infomation-form .input-wrap {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.my-infomation .infomation-form .input-wrap .iconfont {
  color: var(--themeColor);
  margin-right: 20rpx;
}
.my-infomation .infomation-form .input-wrap .label {
  font-size: 30rpx;
  color: #000000;
}
.my-infomation .infomation-form .input-wrap text {
  font-size: 30rpx;
}
.my-infomation .infomation-form .input-wrap input {
  width: 470rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.my-infomation .infomation-form .input-wrap .picker {
  width: 200rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.my-infomation .infomation-form .input-wrap .change-tel {
  width: 150rpx;
  height: 60rpx;
  margin-left: 10rpx;
  color: #000000;
  border-radius: 10rpx;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my-infomation .infomation-form .id-card-img {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
  justify-content: space-around;
  align-items: center;
}
.my-infomation .infomation-form .id-card-img .img-item {
  width: 300rpx;
  height: 170rpx;
  border-radius: 10rpx;
  border: 1px solid #bbbbbb;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.my-infomation .infomation-form .id-card-img .img-item .iconfont {
  font-size: 60rpx;
  color: #999999;
}
.my-infomation .infomation-form .id-card-img .img-item .b-t {
  font-size: 28rpx;
  color: #999999;
}
.my-infomation .infomation-form .id-card-img .img-item .img {
  width: 100%;
  height: 100%;
}
.my-infomation .infomation-form .submit {
  margin-top: 50rpx;
  width: 100%;
  font-size: 28rpx;
  height: 70rpx;
  background-color: var(--themeColor);
}
