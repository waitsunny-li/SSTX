.form-content {
  width: 90%;
  height: 580rpx;
  padding: 40rpx;
  box-sizing: border-box;
  margin: 0 auto;
  background-color: #ffffff;
}
.form-content .input-wrap {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.form-content .input-wrap .label {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #000000;
  font-size: 30rpx;
  font-weight: 600;
}
.form-content .input-wrap input {
  width: 75%;
  height: 100%;
  display: flex;
  font-size: 30rpx;
  align-items: center;
  background-color: #fff;
}
.form-content .input-wrap .verify-code {
  width: 75%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.form-content .input-wrap .verify-code input {
  width: 200rpx;
}
.form-content .input-wrap .verify-code .send {
  width: 180rpx;
  height: 60rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 5rpx;
  color: #ffffff;
  background-color: var(--assColor);
}
.form-content .input-wrap .verify-code .sended {
  background-color: #bbbbbb;
}
.form-content .input-wrap picker {
  height: 100%;
  width: 450rpx;
  display: flex;
  align-items: center;
}
.form-content .input-wrap picker .picker {
  height: 100%;
  color: #000000;
  font-size: 30rpx;
}
.form-content .img-wrap {
  margin-top: 10rpx;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #EEF2F7;
  border-radius: 10rpx;
}
.form-content .img-wrap .title {
  color: #000000;
  font-size: 28rpx;
}
.form-content .img-wrap .img-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.form-content .img-wrap .img-group .img-item {
  width: 85%;
  height: 260rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.form-content .img-wrap .img-group .img-item .t-img {
  width: 65rpx;
  height: 65rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #76BBFF;
  border-radius: 50%;
}
.form-content .img-wrap .img-group .img-item .t-img .iconfont {
  color: #fff;
  font-size: 45rpx;
}
.form-content .img-wrap .img-group .img-item .b-t {
  margin-top: 20rpx;
  color: #76BBFF;
  font-size: 26rpx;
}
.form-content .img-wrap .img-group .img-item .img {
  width: 100%;
  height: 100%;
}
.form-content .submit {
  margin-top: 50rpx;
  width: 100%;
  font-size: 28rpx;
  height: 70rpx;
  background-color: var(--themeColor);
}
