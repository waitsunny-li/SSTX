.persondetail-wrap {
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}
.persondetail-wrap .header-title {
  width: 100%;
  height: 50rpx;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.persondetail-wrap .header-title .title {
  color: var(--assColor);
  font-size: 34rpx;
}
.persondetail-wrap .header-title .share {
  width: 120rpx;
  height: 50rpx;
  border: 1px solid #dddbdb;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: var(--themeColor);
}
.persondetail-wrap .header-title .share .iconfont {
  font-size: 30rpx;
  font-weight: 600;
}
.persondetail-wrap .header-title .share .text {
  margin-left: 5rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.persondetail-wrap .conversation-content {
  width: 100%;
  border: 1px solid #000000;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}
.persondetail-wrap .conversation-content .title,
.persondetail-wrap .conversation-content .posion {
  color: #999999;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}
.persondetail-wrap .conversation-content .img-wrap {
  width: 100%;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.persondetail-wrap .conversation-content .img-wrap .img {
  width: 80%;
  height: 260rpx;
}
.persondetail-wrap .conversation-content .conversation-item {
  width: 100%;
  display: flex;
  padding: 20rpx 0;
  flex-direction: column;
}
.persondetail-wrap .conversation-content .conversation-item .item {
  width: 100%;
  display: flex;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.persondetail-wrap .conversation-content .conversation-item .item .i {
  color: #000000;
}
.persondetail-wrap .conversation-content .conversation-item .item .con {
  color: #000000;
}
.persondetail-wrap .conversation-content .bottom-content {
  padding-top: 30rpx;
  width: 100%;
  color: #000000;
  font-size: 28rpx;
  text-indent: 40rpx;
}
.persondetail-wrap .conversation-content .rich {
  width: 100%;
  margin-top: 20rpx;
}
.persondetail-wrap .conversation-content .rich img {
  width: 100%;
}
.bottom-inner .title {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #000000;
}
.bottom-inner .look-tel {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bottom-inner .look-tel .look-item {
  width: 100%;
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #eeeeee;
  align-items: center;
  background-color: #ffffff;
}
.bottom-inner .look-tel .look-item .iconfont {
  font-size: 45rpx;
  color: var(--themeColor);
  font-weight: 400;
}
.bottom-inner .look-tel .look-item .title-icon-text {
  color: #999999;
  font-size: 32rpx;
  font-weight: 400;
  margin-left: 30rpx;
  padding: 0;
}
.imgCode {
  width: 100%;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.imgCode .img {
  width: 45vw;
  height: 56.25vw;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.3);
}
.imgCode .desc {
  margin: 30rpx 0;
  color: #414040;
  font-size: 26rpx;
}
.imgCode .save-btn {
  width: 35vw;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  border-radius: 40rpx;
}
.imgCode .save-btn .iconfont,
.imgCode .save-btn .btn-text {
  color: #ffffff;
  font-size: 30rpx;
}
.imgCode .save-btn .btn-text {
  margin-left: 20rpx;
}
