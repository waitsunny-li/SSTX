page {
  background-color: #ffffff;
}
.publish-top {
  width: 100vw;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.publish-top .publish-support-con {
  width: 200rpx;
  height: 80rpx;
  color: #ffffff;
  display: flex;
  background-color: #c2bfbf;
  justify-content: center;
  align-items: center;
}
.publish-top .left {
  border-radius: 0 40rpx 40rpx 0;
}
.publish-top .right {
  border-radius: 40rpx 0 0 40rpx;
}
.publish-top .active {
  background-color: var(--themeColor);
}
.publish-top .logo {
  width: 80rpx;
  height: 100rpx;
}
.publish-top .logo .img {
  width: 70rpx;
  height: 70rpx;
}
.publish-top .logo .boimg {
  width: 70rpx;
  height: 30rpx;
}
.publish-need {
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}
.publish-need .need-form .iconfont {
  color: var(--themeColor);
  margin-right: 20rpx;
}
.publish-need .need-form .label {
  font-size: 30rpx;
  color: #000000;
}
.publish-need .need-form .name-input {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.publish-need .need-form .name-input input {
  width: 400rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.publish-need .need-form .radio-input {
  width: 100%;
  height: 130rpx;
  display: flex;
  margin-top: 20rpx;
}
.publish-need .need-form .radio-input .label {
  font-size: 30rpx;
  color: #000000;
}
.publish-need .need-form .radio-input .radio-group {
  width: 70%;
  display: flex;
  flex-wrap: wrap;
}
.publish-need .need-form .radio-input .radio-group .need-cate-radio {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.publish-need .need-form .radio-input .radio-group .other {
  width: 280rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  height: 50rpx;
  border-bottom: 1px solid #bbbbbb;
}
.publish-need .need-form .need-content .label {
  width: 100%;
  display: flex;
  align-items: center;
}
.publish-need .need-form .need-content .label .info {
  color: #cfcfcf;
  font-size: 20rpx;
}
.publish-need .need-form .need-content .need-content-textarea {
  margin-top: 10rpx;
}
.publish-need .need-form .need-content .need-content-textarea textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #acacac;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.publish-need .need-form .need-date-wrap {
  margin-top: 20rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.publish-need .need-form .need-date-wrap .need-date {
  width: 60%;
  display: flex;
  align-items: center;
}
.publish-need .need-form .report-back {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.publish-need .need-form .report-back input {
  width: 300rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.publish-need .need-form .user-infomation {
  margin-top: 50rpx;
  width: 90vw;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  background-color: #f4f4f4;
  border-radius: 20rpx;
}
.publish-need .need-form .user-infomation .user-item {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.publish-need .need-form .user-infomation .user-item input {
  width: 400rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
}
.publish-need .need-form .submit {
  margin-top: 50rpx;
  width: 100%;
  height: 80rpx;
  background-color: var(--assColor);
}
