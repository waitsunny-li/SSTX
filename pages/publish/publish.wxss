.publish-top {
  width: 100vw;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.publish-top .publish-support-con {
  width: 200rpx;
  height: 80rpx;
  color: #ffffff;
  display: flex;
  background-color: #c2bfbf;
  justify-content: center;
  align-items: center;
}
.publish-top .left {
  border-radius: 0 40rpx 40rpx 0;
}
.publish-top .right {
  border-radius: 40rpx 0 0 40rpx;
}
.publish-top .active {
  background-color: var(--themeColor);
}
.publish-top .logo {
  width: 80rpx;
  height: 100rpx;
}
.publish-top .logo .img {
  width: 70rpx;
  height: 70rpx;
}
.publish-top .logo .boimg {
  width: 70rpx;
  height: 30rpx;
}
.publish-need {
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
}
.publish-need .need-form .name-input {
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
}
.publish-need .need-form .name-input .label {
  font-size: 30rpx;
  color: #000000;
}
.publish-need .need-form .name-input input {
  width: 400rpx;
  height: 60rpx;
  padding: 10rpx;
  box-sizing: border-box;
  border: 1px solid #bbbbbb;
  font-size: 28rpx;
  border-radius: 10rpx;
}
