.title-tab {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: var(--themeColor);
}
.title-tab .title-item {
  font-size: 36rpx;
  height: 70rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  font-weight: 700;
  color: #ffffff;
  border-bottom: 3px solid transparent;
}
.title-tab .active {
  border-bottom: 3px solid #ffffff;
}
.default {
  border-radius: 0 80rpx 0 0;
}
