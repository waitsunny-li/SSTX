.title_wrap_swiper {
  width: 100vw;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  height: 80rpx;
  align-items: center;
  background-color: #f7f7f7;
}
.title_wrap_swiper .title_img_wrap {
  width: 80rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.title_wrap_swiper .title_img_wrap .title_text {
  font-size: 24rpx;
}
.title_wrap_swiper .swiper_wrap {
  width: 50vw;
  margin-left: 10rpx;
  margin-right: 15rpx;
}
.title_wrap_swiper .swiper_wrap .swiper {
  width: 100%;
  height: 80rpx;
}
.title_wrap_swiper .swiper_wrap .swiper .swiper_item {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.title_wrap_swiper .swiper_wrap .swiper .swiper_item .title {
  width: 100%;
  color: #000000;
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.title_wrap_swiper .right_wrap {
  font-size: 24rpx;
  padding-left: 16rpx;
  border-left: 1px solid #bbbbbb;
  color: #797979;
}
