<!-- miniprogram/custom-tab-bar/index.wxml -->
<cover-view class="tab-bar">
  <cover-view class="tab-bar-border"></cover-view>
  <cover-view class="pub-wrap">
    <cover-view class="pub-item">发布需求</cover-view>
    <cover-view class="pub-item">发布需求</cover-view>
  </cover-view>
  <cover-view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{index == 2 ? 'center' : ''}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
    <cover-image src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></cover-image>
    <cover-view style="color: {{selected === index ? selectedColor : color}}">
      {{item.text}}
    </cover-view>
  </cover-view>
</cover-view>